{
    "manifest_version": 2,

    "name": "shTab",
    "description": "A shell-like new tab page replacement",
    "version": "0.3",

    "developer": {
        "name": "Nicholas Gilbert",
        "url": "https://gitlab.com/gilben/shTab"
    },

    "background": {
        "scripts": ["js/tab/background.js"]
    },

    "chrome_url_overrides" : {
        "newtab": "html/tab.html"
    },
    "permissions": [
        "cookies",
        "history",
        "menus",
        "storage",
        "tabs",
        "downloads"
    ],
    "applications": {
        "gecko": {
            "id": "shtab@gitlab.com",
            "strict_min_version": "60.0"
        }
    }

}